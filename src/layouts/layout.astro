---
import BaseHead from "../components/base-head.astro";
import Navigation from "../components/navigation.astro";
import Profile from "../components/profile.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="grid grid-cols-1 lg:grid-cols-2 lg:mx-12 h-dvh! pt-24 overflow-y-scroll lg:overflow-auto"
  >
    <div
      class="flex flex-col w-full! space-y-24 lg:h-full justify-start items-center"
    >
      <Profile />
      <Navigation />
    </div>
    <main class="flex flex-col lg:overflow-y-scroll w-full! items-center">
      <slot />
    </main>
  </body>
</html>
