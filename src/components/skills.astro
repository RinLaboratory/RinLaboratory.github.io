---
import Badge from "../components/ui/badge.astro";
import Card from "./ui/card.astro";
import lang from "../assets/lang";
import applyHTMLStyles from "../lib/apply-html-styles";

const skillCategories = lang.langSkills.categories;
---

<section class="flex flex-col mb-16 scroll-mt-16 lg:mb-24 lg:scroll-mt-24">
  <div
    class="sticky top-0 z-20 -mx-6 mb-8 bg-background/80 px-6 py-5 backdrop-blur lg:relative lg:mx-0 lg:px-0 lg:py-0 lg:mb-12"
  >
    <h2
      class="text-2xl font-bold text-foreground lg:text-3xl"
      set:html={applyHTMLStyles(lang.langSkills.skills)}
    />
    <p
      class="mt-2 text-muted-foreground"
      set:html={applyHTMLStyles(lang.langSkills.description)}
    />
  </div>

  <div class="space-y-10">
    {
      skillCategories.map((category) => (
        <Card title={category.title}>
          <category.icon slot="icon" class="h-5 w-5 resize-none" />

          {category.skills.map((skill) => (
            <Badge
              variant="secondary"
              class="bg-primary/10 text-primary hover:bg-primary/20 transition-colors"
            >
              {skill}
            </Badge>
          ))}
        </Card>
      ))
    }
  </div>
</section>
